# Anytime Pooja - Environment Variables

# =============================================
# APPLICATION SETTINGS
# =============================================
NODE_ENV=development
PORT_USER_SERVICE=3001
PORT_ASTROLOGER_SERVICE=3002
PORT_COMMUNICATION_SERVICE=3003

# Frontend URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================
# SUPABASE CONFIGURATION
# =============================================
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Connection (if needed for direct access)
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# =============================================
# AUTHENTICATION
# =============================================
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRES_IN=30d

# =============================================
# AGORA SDK (Voice/Video Calls)
# =============================================
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate
AGORA_CUSTOMER_ID=your_agora_customer_id
AGORA_CUSTOMER_SECRET=your_agora_customer_secret

# =============================================
# SMS SERVICE (OTP)
# =============================================
# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Alternative: MSG91
MSG91_API_KEY=your_msg91_api_key
MSG91_SENDER_ID=your_sender_id
MSG91_TEMPLATE_ID=your_template_id

# =============================================
# PAYMENT GATEWAYS
# =============================================
# Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Stripe (Alternative)
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# =============================================
# HOROSCOPE API
# =============================================
# AstrologyAPI.com
ASTROLOGY_API_USER_ID=your_astrology_api_user_id
ASTROLOGY_API_KEY=your_astrology_api_key
ASTROLOGY_API_BASE_URL=https://json.astrologyapi.com/v1

# Alternative: Horoscope API
HOROSCOPE_API_KEY=your_horoscope_api_key
HOROSCOPE_API_BASE_URL=https://horoscope-app-api.vercel.app/api/v1

# =============================================
# LOCATION SERVICES
# =============================================
# OpenStreetMap Nominatim (Free)
NOMINATIM_BASE_URL=https://nominatim.openstreetmap.org

# Google Maps (Alternative - Paid)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# =============================================
# FILE STORAGE
# =============================================
# Supabase Storage
SUPABASE_STORAGE_BUCKET=avatars

# AWS S3 (Alternative)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=anytime-pooja-uploads

# =============================================
# EMAIL SERVICE
# =============================================
# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@anytimepooja.com

# SMTP (Alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# =============================================
# PUSH NOTIFICATIONS
# =============================================
# Firebase Cloud Messaging
FCM_SERVER_KEY=your_fcm_server_key
FCM_PROJECT_ID=your_firebase_project_id

# OneSignal (Alternative)
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_REST_API_KEY=your_onesignal_rest_api_key

# =============================================
# REDIS (Caching & Sessions)
# =============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# =============================================
# MONITORING & ANALYTICS
# =============================================
# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_measurement_id

# =============================================
# RATE LIMITING
# =============================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# =============================================
# SECURITY
# =============================================
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret

# =============================================
# DEVELOPMENT TOOLS
# =============================================
# Webhook testing (ngrok alternative)
WEBHOOK_SITE_URL=https://your-app.ngrok.io

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs

# =============================================
# BUSINESS CONFIGURATION
# =============================================
# Platform Settings
PLATFORM_COMMISSION_PERCENTAGE=20
MIN_WALLET_BALANCE=50
REFERRAL_BONUS_AMOUNT=100
FREE_CONSULTATION_MINUTES=5

# Consultation Settings
MAX_CONSULTATION_DURATION_MINUTES=120
CONSULTATION_BUFFER_MINUTES=5
AUTO_END_CONSULTATION_AFTER_MINUTES=130

# Pricing
DEFAULT_CHAT_RATE=15
DEFAULT_VOICE_RATE=20
DEFAULT_VIDEO_RATE=25